/* pages/projectdetails/projectdetails.wxss */
.top {
    padding: 24rpx 30rpx 36rpx 28rpx;
    background: #FFFFFF
}

/*项目信息*/
.top-icon {
    flex: 0 0 130rpx;
    font-size: 64rpx;
    opacity: .6;
    color: #1485EE;
    margin-right: 28rpx;
}

.top-name {
    font-size: var(--bodyfont);
    font-weight: bold;
    color: rgba(0, 0, 0, 0.9);
    opacity: 1;
}

.panel__hd {
    margin-top: 24rpx;
    font-size: var(--bodyfont);
    font-weight: bold;
    color: #000000;
    opacity: 1;
}

.list {
    padding-top: 24rpx;
    display: flex;
    display: -webkit-box;
}

.list-formTitle {
    position: relative;
    width: 174rpx;
    text-align: right;
    font-size: var(--textfont);
    font-weight: 400;
    color: #9E9E9E;
    opacity: 1;
}

.list-formValue {
    position: relative;
    padding-left: 30rpx;
    font-size: var(--textfont);
    font-weight: 400;
    color: #000000;
    opacity: 1;
}

/*项目授权信息*/
.content {
    margin-top: 20rpx;
    padding: 24rpx 30rpx 36rpx 28rpx;
    background: #FFFFFF
}

.content-title {
    font-size: var(--bodyfont);
    font-weight: bold;
    color: #000000;
    opacity: 1;
}

.checkboxs {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
}

.checkboxs_flex {
    margin-top: 18rpx;
    flex: 0 0 218rpx;
}

.checkboxs__hd {
    padding-right: 4px;
}

.checkboxs__bd {
    font-size: var(--textfont);
    line-height: 18rpx;
    font-weight: 400;
    color: #1485EE;
    opacity: 1;
}

/*项目授权*/
.authorization {
    display: flex;
    flex-wrap:wrap;
}

.authorization-list {
    margin-top: 16rpx;
    margin-right: 10rpx;
    padding: 10rpx;
    width: 100rpx;
    text-align: center;
    font-size: 16rpx;
    font-weight: 400;
    background: #BFDEF9;
    opacity: 1;
    border-radius: 2px;
}

/*已接入设备数量*/
.footer {
    font-size: var(--textfont);
    background-color: var(--weui-BG-2);
}

.footer-title {
    padding-left: 28rpx;
    font-size: var(--textfont);
    font-weight: bold;
    color: #000000;
    opacity: 1;
}

.weui-flex_wrap {
    flex-wrap: wrap;
}

.weui-flex__item_flex {
    padding: 16rpx;
    flex: 0 0 218rpx
}

.footer-list {
    line-height: 48rpx;
    text-align: center;
    height: 100%;
    width: 100%;
    border: 1px solid rgba(112, 112, 112, 0.2);
    opacity: 1;
    border-radius: 4px;
}

.footer-icon {
    margin: 18rpx 0 18rpx 24rpx;
    font-size: 60rpx;
    opacity: .6;
    color: #1485EE;
}

.footer-name {
    margin-left: 6rpx;
    text-align: right;
    font-size: var(--restfont);
    font-weight: 400;
    line-height: 20rpx;
    color: #000000;
    opacity: 1;
}

.footer-count {
    margin-left: 82rpx;
    font-size: var(--bodyfont);
    font-weight: bold;
    line-height: 50rpx;
    color: #646464;
    opacity: 1;
}
