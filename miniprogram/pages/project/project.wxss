/* pages/project/project.wxss */
@import "/dist/css/general.wxss";

ec-canvas {
    width: 100%;
    height: 100%;
}

/*Top*/
.top-list-title {
    margin-top: 50rpx;
}

.top-list-new {
    position: relative;
    margin-bottom: 0rpx;
    text-align: center;
    line-height: 220rpx;
}

.top-list-new:before {
    position: absolute;
    content: " ";
    left: 0;
    top: 64rpx;
    right: 0;
    height: 160rpx;
    border-left: 1px solid rgba(0, 0, 0, .2);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}


/*统计图*/
.chartcontent {
    margin-top: 50rpx;
    padding: 24rpx;
}

.chartcontent-title {
    font-size: var(--bodyfont);
    font-weight: 400;
    color: rgba(0, 0, 0, 0.9);
    opacity: 1;
}

.chartcontent-content {
    margin-top: 10rpx;
    width: 100%;
    height: 274rpx;
    background: #FFFFFF;
    box-shadow: 0px 3px 6px rgba(20, 133, 238, 0.1);
    opacity: 1;
    border-radius: 2px;
}


/*项目*/
.footer {
    margin: 24rpx;
    padding: 20rpx;
    background: #FFFFFF;
}

.footer-title {
    font-size: var(--subtitlefont);
    font-weight: bold;
    color: #292929;
    opacity: 1;
}

/*搜索框*/
.weui-search-bar {
    margin-top: 20rpx;
    padding: 3rpx;
}

/*项目列表*/
.footer-lists {
    padding: 2rpx;
}

.footer-list {
    position: relative;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
}

.footer-list:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-top: 4rpx solid var(--weui-FG-3);
    color: var(--weui-FG-3);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    z-index: 2;
}

.footer-list_title {
    line-height: 60rpx;
    text-align: left;
    font-size: var(--bodyfont);
    font-weight: bold;
    color: #292929;
    opacity: 1;
}

.footer-list_info {
    line-height: 40rpx;
    text-align: left;
    font-size: var(--textfont);
    font-weight: 400;
    color: #A4A4A4;
    opacity: 1;
}

.accessequipment {
    float: right;
    text-align: center;
    height: 84rpx;
    width: 136rpx;
    border: 4rpx solid #1C89FE;
    border-radius: 8rpx;
    opacity: 1;
    color: #1C89FE;
}

.accessequipment_title {
    line-height: 50rpx;
    font-size: var(--bodyfont);
    font-weight: bold;
}

.accessequipment_count {
    font-size: var(--restfont);
}

.authorization {
    display: flex;
    flex-wrap:wrap;
}

.authorization-list {
    margin-top: 16rpx;
    margin-right: 10rpx;
    padding: 10rpx;
    width: 100rpx;
    text-align: center;
    font-size: 16rpx;
    font-weight: 400;
    background: #BFDEF9;
    opacity: 1;
    border-radius: 2px;
}