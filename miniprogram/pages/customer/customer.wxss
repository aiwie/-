/* pages/customer/customer.wxss */
@import "/dist/css/general.wxss";

/*top*/
.border-right {
    border-right: 1px solid rgba(0, 0, 0, .2);
}

/*统计图*/
ec-canvas {
    width: 100%;
    height: 100%;
}

.chartcontent {
    margin-top: 50rpx;
    padding: 24rpx;
}

.chartcontent-title {
    text-align: center;
    font-size: var(--bodyfont);
    font-weight: 400;
    color: rgba(0, 0, 0, 0.9);
    opacity: 1;
}

.chartcontent-content {
    margin-top: 10rpx;
    height: 274rpx;
    background: #FFFFFF;
    box-shadow: 0px 3px 6px rgba(20, 133, 238, 0.1);
    opacity: 1;
    border-radius: 2px;
}


/*子公司详情*/
.footer {
    padding: 24rpx;
}

.customer {
    background: #FFFFFF;
    padding: 20rpx;
}

.customer-title {
    font-size: var(--subtitlefont);
    font-weight: bold;
    color: #292929;
    opacity: 1;
}

/*搜索框*/
.weui-search-bar {
    margin-top: 20rpx;
    padding: 2rpx;
}

/*客户列表*/
.customer-list {
    border-bottom: 1px solid rgba(229, 229, 229, .5);
    padding-bottom: 20rpx;
}

.customer-img {
    flex: 0 0 130rpx;
    padding-top: 10rpx;
    margin-right: 10rpx;
    width: 100rpx;
    height: 100rpx;
}

.customer-name {
    padding-top: 10rpx;
    font-size: var(--bodyfont);
    font-weight: bold;
    color: rgba(0, 0, 0, 0.9);
    opacity: 1;
}

.customer-time {
    line-height: 30rpx;
    font-size: var(--restfont);
    color: #292929;
    opacity: .5;
}

.customer-warntime {
    line-height: 30rpx;
    font-size: var(--restfont);
    color: #ffdfa8;
}

.customer-project {
    padding-top: 30rpx;
    text-align: center;
}

.customer-projec-number {
    font-size: var(--bodyfont);
    font-weight: bold;
    color: #1485EE;
}

.customer-projec-name {
    font-size: var(--textfont);
}