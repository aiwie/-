/*按钮*/
.btnarea {
    position: fixed;
    width: 100%;
    bottom: 30rpx;
    background: #FFFFFF;

}
.weui-btn{
    width: 90%;
}
.weui-btn-yes{
    background-color: #1485EE;
}
.weui-btn-no{
    background-color: #BBBBBB;
}

